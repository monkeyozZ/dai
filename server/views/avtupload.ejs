<html class="js cssanimations"><head>
  <meta charset="utf-8">
  <title>基于amazeui框架头像上传代码</title>

  <link rel="stylesheet" type="text/css" href="css/font-awesome.4.6.0.css">
  <link rel="stylesheet" href="css/amazeui.min.css">
  <link rel="stylesheet" href="css/cropper.css">
  <link rel="stylesheet" href="css/custom_up_img.css">
  <style type="text/css">
    .up-img-cover {width: 100px;height: 100px;}
    .up-img-cover img{width: 100%;}
  </style>

</head>
<body class="">
<center>
  <div class="up-img-cover" id="up-img-touch">
    <img class="am-circle" alt="点击图片上传" src="images/hu.jpg" data-am-popover="{content: '点击上传', trigger: 'hover focus'}">
  </div>
</center>
<div><a style="text-align: center; display: block;" id="pic"></a></div>

<!--图片上传框-->
<div class="am-modal am-modal-no-btn up-frame-bj am-modal-out" tabindex="-1" id="doc-modal-1" style="display: none;">
  <div class="am-modal-dialog up-frame-parent up-frame-radius" style="width: 600px;">
    <div class="am-modal-hd up-frame-header">
      <label>修改头像</label>
      <a href="javascript: void(0)" class="am-close am-close-spin" data-am-modal-close="">×</a>
    </div>
    <div class="am-modal-bd  up-frame-body">
      <div class="am-g am-fl">
        <div class="am-form-group am-form-file">
          <div class="am-fl">
            <button type="button" class="am-btn am-btn-default am-btn-sm">
              <i class="am-icon-cloud-upload"></i> 选择要上传的文件</button>
          </div>
          <input type="file" id="inputImage">
        </div>
      </div>
      <div class="am-g am-fl">
        <div class="up-pre-before up-frame-radius">
          <img id="image">
        </div>
        <div class="up-pre-after up-frame-radius">
        </div>
      </div>
      <div class="am-g am-fl">
        <div class="up-control-btns">
          <span class="am-icon-rotate-left" onclick="rotateimgleft()"></span>
          <span class="am-icon-rotate-right" onclick="rotateimgright()"></span>
          <span class="am-icon-check" id="up-btn-ok" url="/up_img"></span>
        </div>
      </div>

    </div>
  </div>
</div>

<!--加载框-->
<div class="am-modal am-modal-loading am-modal-no-btn" tabindex="-1" id="my-modal-loading">
  <div class="am-modal-dialog">
    <div class="am-modal-hd">正在上传...</div>
    <div class="am-modal-bd">
      <span class="am-icon-spinner am-icon-spin"></span>
    </div>
  </div>
</div>

<!--警告框-->
<div class="am-modal am-modal-alert am-modal-out" tabindex="-1" id="my-alert" style="display: none;">
  <div class="am-modal-dialog">
    <div class="am-modal-hd">信息</div>
    <div class="am-modal-bd" id="alert_content">没有选择上传的图片</div>
    <div class="am-modal-footer">
      <span class="am-modal-btn">确定</span>
    </div>
  </div>
</div>
<script src="javascripts/jquery-1.8.3.min.js"></script>
<script src="javascripts/amazeui.min.js" charset="utf-8"></script>
<script src="javascripts/cropper.min.js" charset="utf-8"></script>
<script src="javascripts/custom_up_img.js" charset="utf-8"></script>




<div class="am-popover am-popover-bottom" id="am-popover-71wy3" style="display: none; top: 110px; left: 901.5px;">
  <div class="am-popover-inner">点击上传</div>
  <div class="am-popover-caret"></div>
</div>
<div class="am-dimmer" data-am-dimmer="" style="display: none;">

</div>
</body>
</html>
